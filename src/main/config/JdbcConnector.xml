<DataStore>
    <Name>jdbc</Name>
    <Version>0.3.0</Version>
    <RequiredProperties>
        <Property>
            <PropertyName>Hosts</PropertyName>
            <Description>The list of hosts ips (csv). Example: host1,host2,host3</Description>
        </Property>
        <Property>
            <PropertyName>Port</PropertyName>
            <Description>The list of ports (csv).</Description>
        </Property>
        <Property>
            <PropertyName>driverClass</PropertyName>
            <Description>JDBC driver class</Description>
        </Property>
    </RequiredProperties>
    <OptionalProperties>
	<Property>
            <PropertyName>user</PropertyName>
            <Description>Username</Description>
        </Property>
        <Property>
            <PropertyName>password</PropertyName>
            <Description>Password</Description>
        </Property>
    </OptionalProperties>
</DataStore>
